<config>
    <tabs>
        <lifestyles translate="label" module="lifestyle">
            <label>Lifestyle Favorites</label>
            <sort_order>99999</sort_order>
        </lifestyles>
    </tabs> 
    <sections>
        <lifestyle_options translate="label" module="lifestyle">
            <label>Lifestyle Favorite Options</label>
            <tab>lifestyles</tab>
            <frontend_type>text</frontend_type>
            <sort_order>10</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>  
			<groups>
                <basic_settings translate="label">
                    <label>Basic Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>                
					<fields>
						<enabled translate="label">
                            <label>Enabled</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enabled>
						<plug_and_play translate="label">
                            <label><![CDATA[Plug &amp; Play]]></label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
							<comment>If you choose no then you will need to modify the admin template files in order to get the lifestyle favorite to display.  Choose yes if you have not modified the admin theme in any way (please see documentation)</comment>
                        </plug_and_play>
						<frontend_label translate="label">
							<label>Frontend Label</label>
							<frontend_type>text</frontend_type>
							<sort_order>20</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>  
							<comment>This will be the label shown to users during the checkout proces</comment>
						</frontend_label>
					</fields>       
                </basic_settings>
				<character_count>
					<label>Character Count</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>20</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>    
					<comment>Use this section to limit the number of characters a user can enter as a lifestyle favorite</comment>					
					<fields>
						<enabled translate="label">
                            <label>Enabled</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enabled>
						<maximum_characters translate="label">
							<label>Maximum Characters</label>
							<frontend_type>text</frontend_type>
							<sort_order>20</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>                    
							<validate>validate-number</validate>
						</maximum_characters>
					</fields>       
				</character_count>
            </groups>			
        </lifestyle_options>
    </sections>     
</config>