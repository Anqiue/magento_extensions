<?php 
$home = new Mage_Page_Block_Html_Header();
	  if ($home->getIsHomePage()): 
	  $slides = Mage::getStoreConfig('buyexpress_options/slides');
	  $mediaUrl = Mage::getBaseUrl('media') . 'images/';
?>
<div class="slideshow">
	<ul class="slideTab">
<?php $i=0; foreach($slides as $slide): $i++;  ?>
	
    	<?php if(!empty($slides["slide_title{$i}"])): ?>
        <li <?php if($i==1){ echo "class='active'"; } ?>>
        	<div class="tabContent">
        		<a href="<?php echo $slides["slide_url{$i}"];?>" class="title"><?php echo $slides["slide_title{$i}"]; ?></a>
            	<p class="slideDesc"><?php echo $slides["slide_subtitle{$i}"]; ?></p>
                <img src="<?php echo $this->getSkinUrl('images/slideAcive.png', array('_secure'=>true)); ?>" width="16" height="56" class="arrowActive" />
